  "implementationNotes": {
    "chartLibrary": "react-sparklines or recharts (TinyLineChart)",
    "installation": "npm install react-sparklines",
    "codeExample": "import { Sparklines, SparklinesLine, SparklinesSpots } from 'react-sparklines';\n\nfunction SparklineMetricRow({ label, value, change, sparklineData, color }) {\n  return (\n    <div className=\"flex items-center justify-between py-3\">\n      <div className=\"flex flex-col\">\n        <span className=\"text-sm text-gray-600\">{label}</span>\n        <div className=\"flex items-baseline gap-2\">\n          <span className=\"text-2xl font-bold\">{value}</span>\n          <span className={`text-sm ${change.startsWith('+') ? 'text-green-600' : 'text-red-600'}`}>\n            {change}\n          </span>\n        </div>\n      </div>\n      <Sparklines data={sparklineData} width={120} height={40}>\n        <SparklinesLine color={color} style={{ strokeWidth: 2, fill: \"none\" }} />\n        <SparklinesSpots />\n      </Sparklines>\n    </div>\n  );\n}",
    "features": [
      "Compact inline sparkline charts (40-50px height)",
      "Shows trend direction without taking much space",
      "Multiple metrics visible simultaneously",
      "Color-coded by metric type or performance",
      "Animated line drawing on load",
      "Optional area fill under line",
      "Percentage change indicators with up/down arrows",
      "Dividers between metrics for clarity",
      "Responsive layout adapting to container width"
    ],
    "dataBinding": {
      "hubspotApi": "Fetch time-series data for each metric",
      "endpoints": [
        "/analytics/v2/reports",
        "/crm/v3/objects/deals",
        "/engagements/v1/engagements/paged"
      ],
      "aggregation": "Time-series arrays with last 14-30 data points per metric"
    }
  },
