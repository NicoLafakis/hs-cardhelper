  "implementationNotes": {
    "chartLibrary": "react-calendar-heatmap or react-activity-calendar",
    "installation": "npm install react-calendar-heatmap",
    "codeExample": "import CalendarHeatmap from 'react-calendar-heatmap';\nimport 'react-calendar-heatmap/dist/styles.css';\n\nconst values = [\n  { date: '2024-01-01', count: 12 },\n  { date: '2024-01-02', count: 8 },\n  // ... more data\n];\n\n<CalendarHeatmap\n  startDate={new Date('2024-01-01')}\n  endDate={new Date('2024-12-31')}\n  values={values}\n  classForValue={(value) => {\n    if (!value) return 'color-empty';\n    return `color-scale-${Math.min(value.count, 4)}`;\n  }}\n  tooltipDataAttrs={(value) => {\n    return {\n      'data-tip': `${value.date}: ${value.count} events`\n    };\n  }}\n  showWeekdayLabels={true}\n/>",
    "features": [
      "365-day activity grid with color intensity",
      "Hover tooltips showing exact counts per day",
      "Click on cells to drill into daily details",
      "Month and weekday labels for easy navigation",
      "Responsive cell sizing for different viewports",
      "Custom color scales (GitHub-style green or custom)",
      "Summary statistics: active days, streaks, averages",
      "Configurable date ranges (year, 6 months, 3 months)"
    ],
    "dataBinding": {
      "hubspotApi": "Use HubSpot Engagements API or custom events",
      "endpoint": "/engagements/v1/engagements/paged",
      "properties": ["engagement.createdAt", "engagement.type"],
      "aggregation": "Group engagements by date and count per day"
    },
    "cssRequired": ".react-calendar-heatmap .color-empty { fill: #ebedf0; }\n.react-calendar-heatmap .color-scale-1 { fill: #9be9a8; }\n.react-calendar-heatmap .color-scale-2 { fill: #40c463; }\n.react-calendar-heatmap .color-scale-3 { fill: #30a14e; }\n.react-calendar-heatmap .color-scale-4 { fill: #216e39; }"
  },
