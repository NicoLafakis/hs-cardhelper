    "xs": { "gridColumns": 1 },
    "sm": { "gridColumns": 2 },
    "md": { "gridColumns": 2 },
    "lg": { "gridColumns": 3 }
  },
  "animations": {
    "entrance": "fadeIn",
    "hover": null
