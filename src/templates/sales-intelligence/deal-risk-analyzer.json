  "implementationNotes": {
    "dataAggregation": "This template pulls data from multiple HubSpot objects and applies ML-based scoring",
    "hubspotApis": [
      "/crm/v3/objects/deals/{dealId}",
      "/crm/v4/associations/deals/{dealId}/contacts",
      "/crm/v4/associations/deals/{dealId}/companies",
      "/engagements/v1/engagements/paged?dealId={dealId}",
      "/crm/v3/objects/emails?associations=deal"
    ],
    "scoringAlgorithm": {
      "baseScore": 100,
      "deductions": {
        "noExecutiveEngagement": -15,
        "stalledStage": -12,
        "competitorMentions": -8,
        "emailEngagementDrop": -6,
        "missedFollowUps": -10,
        "longSalesCycle": -5
      },
      "additions": {
        "budgetApproved": +10,
        "championActive": +8,
        "decisionTimelineSet": +7,
        "recentPositiveEmail": +5
      }
    },
    "aiComponents": {
      "sentimentAnalysis": "Analyze email/call transcripts for sentiment trends",
      "competitorDetection": "NLP to detect competitor mentions in communications",
      "engagementScoring": "ML model predicting deal outcome based on engagement patterns",
      "nextBestAction": "AI recommendations based on successful deal patterns"
    },
    "realTimeUpdates": "WebSocket connection for live score updates as new activities occur",
    "features": [
      "Cross-object data aggregation (deal + contacts + company + engagements)",
      "AI-powered risk scoring with explainable factors",
      "Competitor mention detection via NLP",
      "Stakeholder engagement tracking (who's engaged, who's not)",
      "Stage velocity analysis vs historical data",
      "Email sentiment analysis across all threads",
      "Actionable recommendations ranked by impact",
      "One-click to create tasks from recommendations"
    ]
  },
